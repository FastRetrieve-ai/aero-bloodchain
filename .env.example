# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5

SQL_QA_MODEL=gpt-4o
ANSWER_LLM_MODEL=gpt-5
CHART_LLM_MODEL=gpt-5-mini

# Database Configuration
# For SQLite (default):
# DATABASE_URL=sqlite:///database/bloodchain.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/bloodchain

# Application Settings
APP_DEBUG=False

# Authentication (optional)
# When both fields are set, Streamlit UI requires login.
APP_LOGIN_USERNAME=admin
APP_LOGIN_PASSWORD=changeme

# OpenRouteService (optional for 等時線功能)
OPENROUTESERVICE_API_KEY=
# 如需使用自建 Gateway，可覆寫預設 API 入口
# OPENROUTESERVICE_BASE_URL=https://api.openrouteservice.org

# Google Maps Geocoding (optional for 地址補完)
GOOGLE_MAPS_API_KEY=
# 若需覆寫官方端點，可設定自建 Proxy
# GOOGLE_GEOCODE_ENDPOINT=https://maps.googleapis.com/maps/api/geocode/json

# Emergency Manual (RAG) — optional override
# Directory containing one markdown file per manual page and the full PDF.
# Defaults to data/emergency-patient-rescue-process
# EMERGENCY_MANUAL_DIR=data/emergency-patient-rescue-process
